<h1>Listing clients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Ssn</th>
      <th>Birth date</th>
      <th>Company</th>
      <th>Title</th>
      <th>Influencer?</th>
      <th>Decision maker</th>
      <th>Address</th>
      <th>Location</th>
      <th>Mobile phone</th>
      <th>Home phone</th>
      <th>Work phone</th>
      <th>Work extention</th>
      <th>Primary email</th>
      <th>Secondary email</th>
      <th>Active employee?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.ssn %></td>
        <td><%= client.birth_date %></td>
        <td><%= client.company_id %></td>
        <td><%= client.title %></td>
        <td><%= client.influencer? %></td>
        <td><%= client.decision_maker %></td>
        <td><%= client.address_id %></td>
        <td><%= client.location_id %></td>
        <td><%= client.mobile_phone %></td>
        <td><%= client.home_phone %></td>
        <td><%= client.work_phone %></td>
        <td><%= client.work_extention %></td>
        <td><%= client.primary_email %></td>
        <td><%= client.secondary_email %></td>
        <td><%= client.active_employee? %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

